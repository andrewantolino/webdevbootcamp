extends layout

block header

block content
	.ui.main.text.container.segment
		.ui.huge.header= 'Edit ' + blog.title
		form.ui.form(action=`/blogs/${blog._id}?_method=PUT` method='POST')
			.field
				label Title
				input(type='text' name='blog[title]' value=blog.title)
			.field
				label Image
				input(type='text' name='blog[image]' value=blog.image)
			.field
				laebel Blog Content
				textarea(name='blog[body]')
					= blog.body
			input.ui.green.big.basic.button(type='submit')
