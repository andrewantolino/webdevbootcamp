extends ../layout

block head
	title New Comment

block content
	.container
		.row
			h1(style="text-align: center")= `Comment on ${campground.name}`
			div(style="width: 55%; margin: 25px auto;")
				form(action=`/campgrounds/${campground.id}/comments` method='POST')
					.form-group
						input.form-control(type='text' placeholder='text' name='comment[text]')
					.form-group
						input.form-control(type='text' placeholder='author' name='comment[author]')
					.form-group
						input.btn.btn-lg.btn-primary.btn-block(type='submit')
				a(href='/campgrounds') Go back